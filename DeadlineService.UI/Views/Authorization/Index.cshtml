@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
<div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
    <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 col-lg-6 col-xxl-3">
                <div class="card mb-0">
                    <div class="card-body">
                        <a href="#!" class="text-nowrap logo-img text-center d-block py-3 w-100">
                            <img src="~/favicon.png" width="180" alt="">
                        </a>
                        <p class="text-center">Your Social Campaigns</p>
                        <form asp-action="SignIn" asp-controller="Authorization" id="login-form" method="post">
                            <div class="mb-3">
                                <label for="inputUsername" class="form-label">Username</label>
                                <input type="text" class="form-control" name="Username" id="inputUsername" aria-describedby="usernameHelp" required>
                            </div>
                            <div class="mb-4 ">
                                <label for="inputPasswordS" class="form-label">Password</label>
                                <input type="password" name="Password" class="form-control" id="inputPasswordS" required>
                            </div>
                            <p style="color:red">@Model.Error</p>
                            <div class="d-flex justify-content-end">
                                <p>Забыли пароль? <a href="#" onclick="forgetPassword()">Восстановить</a></p>
                            </div>
                            <div class="d-flex justify-content-end">
                                <p >Нет аккаунта?  <a href="#" onclick="toggleForm()">Зарегистрироваться</a></p>
                            </div>
                            <button type="submit" class="btn btn-primary" w-100 fs-4 mb-4 rounded-2>Sign In</button>
                        </form>
                        <form asp-action="RefreshPassword" asp-controller="Authorization" class="d-none" id="forget-form" method="post">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email:</label>
                                <input type="email" class="form-control" name="email" id="inputEmail" aria-describedby="emailHelp" required>
                            </div>
                            <p style="color:red">@Model.Error</p>
                            <div class="d-flex justify-content-end">
                                <p>Уже есть аккаунт? <a href="#" onclick="forgetPassword()">Войти</a></p>
                            </div>
                            <button type="submit" class="btn btn-primary" w-100 fs-4 mb-4 rounded-2>Send</button>
                        </form>
                        <form asp-action="Registration" asp-controller="Authorization" class="d-none" id="register-form" method="post">
                            <h3>Registration</h3>
                            <div class="mb-3">
                                <label for="inputUsername" class="form-label">Username</label>
                                <input type="text" class="form-control" name="Username" id="inputUsername" aria-describedby="usernameHelp" required>
                            </div>
                            <div class="mb-4 ">
                                <label for="inputPasswordR" class="form-label">Password</label>
                                <input type="password" class="form-control" name="Password" id="inputPasswordR" required>
                            </div>
                            <p style="color:red">@Model.Error</p>
                            <div class="d-flex justify-content-end">
                                <p >Уже есть аккаунт?  <a href="#" onclick="toggleForm()">Войти</a></p>
                            </div>
                            <button type="submit" class="btn btn-primary" w-100 fs-4 mb-4 rounded-2>Registration</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

